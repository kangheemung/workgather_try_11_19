<div class= "asobinagara">
<h1>ASOBINAGARA</h1>
</div>
<div class="signup">
<span>会員登録(参加者専用)</span>
<%= form_for :user, url: users_path do |f| %>
  
    <div class="body">
        <%= f.label :User_name %>
        <%= f.text_field :User_name, :placeholder => "User name" %><br>
        <%= f.label :email%><br>
        <%= f.text_field :email, :placeholder => "email"  %><br>
        <%= f.label :password %><br>
        <%= f.password_field :password, :placeholder => "password" %><br>
        <%= f.label :password_confirmation %><br>
        <%= f.text_field :password_confirmation, :placeholder => "password_confirmation"  %>
        <div class="name_box">
            <%= f.label :name %><br>
            <%= f.text_area :first_name, :placeholder => "first_name" %>
            <%= f.text_area :last_name, :placeholder => "last_name" %>
        </div>
        <%= f.label :誕生日%><br>
        <%= f.date_field :birthday, :placeholder => "birthday" %>
        <div class="gender_box">
            <%= f.label :gender,'性別' %>
            <%= f.select :gender, {'男性': 1,'女性': 2,'その他': 3},{ include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        </div>
    </div>
        <div class="sign_btn">
            <%= f.button "会員登録", class: "button" %><br>
        </div>
<% end %>
<div class= "login">
<span onclick="location.href='/sessions/new'">ログイン</span>
</div>
</div>
