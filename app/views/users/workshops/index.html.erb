<div class="w_side_header_p">
  <p>Home> workshopsの一覧ページ</p>
</div><!三本のイメージを押したら カテゴリーが開きます。-->
<div class="w_body">
  <% @workshops.each do |workshop| %>
    <div class="w_table_left">
      <div class="w_header_left">
        <div class="w_title">
          <span><%= workshop.w_title%></span>
        </div>
        <div class="w_theme">
          <span><%= workshop.w_theme%></span>
        </div>
      </div>  
      <div class="w_img_d">
        <% if workshop.image.present? %>
          <%= image_tag workshop.image.url, class: "w_img" %>
        <% else %>
          画像がありません
        <% end %>
      </div>
      <div class="average-score">
        <p>ワークショップのレビュー</p><p><%= workshop.posts.count %>件のレビュー</p>
      </div>
    </div>
    <div class="w_table_right">
      <% if current_user.present? %>
        <p>
          開催期間
          </p>
          <p>
            <%= workshop.start_date%>~
            <%= workshop.end_date%>
          </p>
          <p>
            開催時間
          </p>  
            <%= workshop.start_time.strftime("%H:%M")%>~
            <%= workshop.end_time.strftime("%H:%M")%>
          </p>
          <p>定員</p>
          <p>
          <%= workshop.personnel %>
          </p>
          <p>開催場所</p>
          <p><%= workshop.prefecture %></p>
          <p><%= workshop.address1 %></p>
          <p><%= workshop.address2 %></p>
     
          
        
        <p><%= link_to "予約する",users_reservations_new_path(current_user,workshop.id),class: "w_btn_b" %></p>
        <p><%= link_to "レビュー", users_posts_index_path(current_user.id, workshop.id) ,class: "w_btn_r"%></p>  
      <% else %>
        <p>空き状況</p>
        <p><%= workshop.time %></p>
        <p>定員<%= workshop.personnel %></p>
        <p>場所詳細</p>
        <p><%= workshop.prefecture %></p>
        <p><%= workshop.address1 %></p>
        <p><%= workshop.address2 %></p>
        <p>駐車場ありなし</p>
        
        <p><%= link_to "レビュー",users_posts_index_path(current_user,workshop.id),class: "w_btn_r" %></p>
      <% end %>    
    </div>
  <% end %> 
</div>



