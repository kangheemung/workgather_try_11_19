<div class= "asobinagara">
<h1>ASOBINAGARA</h1>
</div>
<div class="signup">
    <div class="signup_text"><span>会員登録(開催者専用)</span></div>
    <div class="body">
        <%= form_for @planner, url:planners_create_path do |f| %>  
         
            <div class="body_box">    
                <p><%= f.label :planner_name %></p>
                <%= f.text_field :planner_name, placeholder: "Planner name" %>
                <% if @planner.errors[:planner_name].any? %>
                <span class="error"><%= @planner.errors[:planner_name].first %></span>
                <% end %>
            </div>  
            <div class="body_box">  
                <p><%= f.label :email %></p>
                <%= f.text_field :email, placeholder: "email"  %>
                <% if @planner.errors[:email].any? %>
                <span class="error"><%= @planner.errors[:email].first %></span>
                <% end %>
            </div>
            <div class="body_box">
            <p><%= f.label :password %></p>
                <%= f.password_field :password, placeholder: "password" %>
                <% if @planner.errors[:password].any? %>
                <span class="error"><%= @planner.errors[:password].first %></span>
                <% end %>
            </div>
                <div class="body_box">  
                <p><%= f.label :password_confirmation %></p>
                </div>  
                <p><%= f.password_field :password_confirmation, :placeholder => "password_confirmation"%></p>
                <% if @planner.errors[:password_confirmation].any? %>
                   <span class="error"><%= @planner.errors[:password_confirmation].first %></span>
                <% end %>
                <div class="body_box">
                    <p><%= f.label :主催者の写真 %></p>
                <div class="planner_profile_box">
                    <p><%=  f.file_field :planner_profile ,class: 'custom-file-input',include_blank: '写真入れてください' %></p>
                </div>    
                    <% if @planner.errors[:planner_profile].any? %>
                    <span class="error"><%= @planner.errors[:planner_profile].first %></span>
                    <% end %>
                </div> 
                <div class="body_box">
                <p><%= f.label :開催者の自己紹介%></p>
                <p><%= f.text_field :p_detail, :placeholder => "開催者の自己紹介",include_blank: '詳細入れてください'%></p>
                <% if @planner.errors[:p_detail].any? %>
                   <span class="error"><%= @planner.errors[:p_detail].first %></span>
                <% end %>
                </div>
                <div class="body_box"> 
                <p><%= f.label :name %></p>
                </div>     
                <div class="body_box"> 
                <p><%= f.text_field :first_name, :placeholder => "first_name", class:"name",include_blank: 'first_name入れてください'%>
                <% if @planner.errors[:first_name].any? %>
                   <span class="error"><%= @planner.errors[:first_name].first %></span>
                <% end %>
                <%= f.text_field :last_name, :placeholder => "last_name" ,class:"name" ,include_blank: 'first_name入れてください'%> </p>
                <% if @planner.errors[:last_name].any? %>
                   <span class="error"><%= @planner.errors[:last_name].first %></span>
                <% end %>
                
                </div>  
                <div class="body_box">
                  <p><%= f.label :誕生日%></p>
                </div>
                <p><%= f.date_field :birthday, :placeholder => "birthday",value: @planner.birthday%></p>
                    <% if @planner.errors[:birthday].any? %>
                        <span class="error"><%= @planner.errors[:birthday].first %></span>
                    <% end %>
                    <div class="gender_box">
                        <div class="body_box">
                        <p><%= f.label :gender,'性別' %></p>
                        </div>
                        <p><%= f.select :gender, {'男性': 1,'女性': 2,'その他': 3},{ include_blank: '選択してください'}, { class: 'form-control' , required: true } %></p></td>
                    </div>
                <div class="sign_btn">
                    <p><%= f.submit "会員登録", class: "button" %></p>
                </div>
            <% end %>
    
        <div class= "login">
            <span onclick="location.href = '/planners/login_form'">ログイン</span>
        </div>
    </div>


